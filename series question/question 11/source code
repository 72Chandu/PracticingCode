//2-6+18-54...
#include<stdio.h>
#include<math.h>
int main(){
    int a,n;
    int sum=0;
    printf("enter the term n and x");
    scanf("%d",&n);
    for(int i=1,a=2;i<=n;i++,a*=3){
       if(i%2==0){
        sum=sum-a;
       }
       else{
        sum=sum+a;
       }
    }
    printf("%d",sum);
}